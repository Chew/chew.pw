<h1>Info for Team <%= @team_name %></h1>

<h2>Above/Below 500</h2>

<span id="win_sum" class="visually-hidden"><%= @win_sum.join(' ') %></span>
<span id="above_500" class="visually-hidden"><%= @above500.join(' ') %></span>

<canvas id="myChart" width="1080" height="400"></canvas>

<h2>Schedule</h2>

<table class="table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Away Team</th>
    <th>Home Team</th>
    <th>Score</th>
    <th>State</th>
    <th>Result</th>
  </tr>
  </thead>
  <tbody>
  <% @scores['dates'].each do |date| %>
    <% date['games'].each do |game| %>
      <tr>
        <td><%= date['date'] %></td>
        <td><%= game['teams']['away']['team']['name'] %></td>
        <td><%= game['teams']['home']['team']['name'] %></td>
        <td><%= game['teams']['away']['score'] %> - <%= game['teams']['home']['score'] %></td>
        <td><%= game['status']['detailedState'] %></td>
        <td><%= mlb_game_state params[:team_id].to_i, game %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<% content_for :extra_foot do %>
  <%= javascript_pack_tag "sports" %>
<% end %>